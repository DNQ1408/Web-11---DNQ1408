<div class="container">
  <div class="text-center">
    <h1>{{question}}</h1>
  </div>

  <div class="progress">
    <div class="progress-bar" role="progressbar" style="width: {{percentYes}}%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100">{{percentYes}}% vote YES</div>
    <div class="progress-bar bg-danger" role="progressbar" style="width: {{percentNo}}%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">{{percentNo}}% vote NO</div>
  </div>

  <div class="text-center">
    <form class="" action="/" method="post">
      <button class="w-25 mt-3 btn btn-warning" name="other" value="0">Other question</button>
    </form>
  </div>
</div>
